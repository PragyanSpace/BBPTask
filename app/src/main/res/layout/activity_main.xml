<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/box1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <EditText
                android:id="@+id/subject1"
                android:background="@drawable/edittext_back"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:hint="Enter the subject" />

            <EditText
                android:background="@drawable/edittext_back"
                android:id="@+id/marks1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:hint="99" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/box1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <EditText
                android:id="@+id/subject2"
                android:background="@drawable/edittext_back"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:hint="Enter the subject" />

            <EditText
                android:background="@drawable/edittext_back"
                android:id="@+id/marks2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:hint="99" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/box2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <EditText
                android:id="@+id/subject3"
                android:background="@drawable/edittext_back"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:hint="Enter the subject" />

            <EditText
                android:background="@drawable/edittext_back"
                android:id="@+id/marks3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:hint="99" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/box3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <EditText
                android:id="@+id/subject4"
                android:background="@drawable/edittext_back"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:hint="Enter the subject" />

            <EditText
                android:background="@drawable/edittext_back"
                android:id="@+id/marks4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:hint="99" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/box4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <EditText
                android:id="@+id/subject5"
                android:background="@drawable/edittext_back"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:hint="Enter the subject" />

            <EditText
                android:background="@drawable/edittext_back"
                android:id="@+id/marks5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:hint="99" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/box5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/piebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="show pie graphs"/>
            <Button
                android:id="@+id/radarbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="show radar graphs"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>